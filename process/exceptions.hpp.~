#ifndef __LIBPROCESS_DETAIL_EXCEPTIONS_HPP__
#define __LIBPROCESS_DETAIL_EXCEPTIONS_HPP__

#include <cstdio>

namespace kms { namespace process{

struct stop_running: std::exception {
	inline stop_running( int signal_number ):
		_sig( signal_number )
	{}
	inline const char * what() const noexcept {
		char res[80];
		snprintf( res, 80, "Получен сигнал %d", _sig );
		return res;
	}
	inline int signal() const noexcept {
		return _sig;
	}
private:
	int _sig;
};

}}	//	namespace kms::process

#endif

